{
  "expo": {
    "name": "Monity",
    "slug": "Monity",
    "version": "2.0.11",
    "orientation": "portrait",
    "icon": "./assets/images/LOGO_MONITY_APP.jpeg",
    "scheme": "monity",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "notification": {
      "icon": "./assets/images/LOGO_MONITY_APP.jpeg",
      "color": "#0A0A0A",
      "iosDisplayInForeground": true,
      "androidMode": "default"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.widechain.monity",
      "buildNumber": "20",
      "infoPlist": {
        "LSApplicationQueriesSchemes": [
          "https",
          "http",
          "https",
          "http"
        ],
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSCameraUsageDescription": "Monity precisa acessar sua câmera para capturar comprovantes de transações. Por exemplo, você pode fotografar um recibo de compra para que o app categorize automaticamente a despesa.",
        "NSMicrophoneUsageDescription": "Monity precisa acessar seu microfone para registrar transações por voz. Por exemplo, você pode falar 'Gastei R$ 50 em almoço' e o app criará a transação automaticamente."
      },
      "usesAppleSignIn": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/LOGO_MONITY_APP.jpeg",
        "backgroundImage": "./assets/images/LOGO_MONITY_APP.jpeg",
        "monochromeImage": "./assets/images/LOGO_MONITY_APP.jpeg"
      },
      "permissions": [
        "NOTIFICATIONS",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ],
      "edgeToEdgeEnabled": false,
      "predictiveBackGestureEnabled": false,
      "package": "com.Monity",
      "versionCode": 20,
      "navigationBar": {
        "backgroundColor": "#262624",
        "barStyle": "light-content"
      },
      "statusBar": {
        "backgroundColor": "#262624",
        "barStyle": "light-content"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/LOGO_MONITY_APP.jpeg"
    },
    "plugins": [
      "./app.plugin.js",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/LOGO_MONITY_APP.jpeg",
          "color": "#0A0A0A",
          "androidMode": "default",
          "iosDisplayInForeground": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/LOGO_MONITY_512px512px.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0A0A0A",
          "dark": {
